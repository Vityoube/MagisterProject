<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverUserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_weight="30">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:weightSum="1" >

                <TextView
                    android:id="@+id/loginLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/userLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/firstNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/firstName"
                    android:layout_weight="0.4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/userFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lastNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lastName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/userLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/ageLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/age"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/userAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/busSizeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/busSize"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/userBusSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/trunkCapacityLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/trunkCapacity"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/trunkCapacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/salonCapacityLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/salonCapacity"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/salonCapacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:id="@+id/minimumSeatsNumberLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/minimumSeatsNumberShortened"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/minimumSeatsNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:gravity="center"
                    android:layout_weight="0.6"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="@string/modify"
            android:onClick="setModifyMode"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>